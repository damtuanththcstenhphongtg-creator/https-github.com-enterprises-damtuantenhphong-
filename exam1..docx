// Tạo file Word mẫu bằng Node.js + docx
const fs = require("fs");
const { Document, Packer, Paragraph, TextRun } = require("docx");

const doc = new Document({
    sections: [{
        properties: {},
        children: [
            new Paragraph({ children: [new TextRun({ text: "ĐỀ KIỂM TRA MÔN TIN HỌC – LỚP 6A – HỌC KỲ II", bold: true, size: 32 })] }),
            new Paragraph({ text: "" }),
            new Paragraph({ children: [new TextRun({ text: "Câu 1: Viết chương trình hiển thị 'Hello World'" })] }),
            new Paragraph({ children: [new TextRun({ text: "Câu 2: Nêu các bước tạo bài kiểm tra trên máy tính" })] }),
        ]
    }]
});

Packer.toBuffer(doc).then(buffer => {
    fs.writeFileSync("uploads/exam1.docx", buffer);
    console.log("✅ Tạo file Word mẫu thành công!");
});
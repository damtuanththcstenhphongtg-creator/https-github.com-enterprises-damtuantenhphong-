// index.js
const express = require("express");
const fs = require("fs");
const path = require("path");

const app = express();
const PORT = 3000;

// Route trả về danh sách exams từ file JSON
app.get("/exams", (req, res) => {
  const filePath = path.join(__dirname, "exams.json"); // file JSON bạn đã đưa
  fs.readFile(filePath, "utf8", (err, data) => {
    if (err) {
      return res.status(500).json({ error: "Không đọc được file JSON" });
    }
    try {
      const exams = JSON.parse(data);
      res.json(exams);
    } catch (parseErr) {
      res.status(500).json({ error: "Lỗi parse JSON" });
    }
  });
});

// Route mặc định
app.get("/", (req, res) => {
  res.send("Server Node.js đang chạy. Truy cập /exams để xem dữ liệu.");
});

app.listen(PORT, () => {
  console.log(`Server chạy tại http://localhost:${PORT}`);
});

